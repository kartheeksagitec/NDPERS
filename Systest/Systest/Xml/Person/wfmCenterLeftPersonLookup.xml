<?xml version="1.0" encoding="utf-8"?>
<form ID="wfmCenterLeftPersonLookup" sfwActive="True" sfwStatus="Review" sfwRemoteObject="srvPerson" sfwResource="200 " sfwType="Lookup" sfwTitle="Person Quick Search" version="3.5" sfwEntity="entPerson" sfwGridCollection="busPersonLookup.icolPerson">
  <initialload>
    <query ID="cdoPerson" sfwQueryRef="entPerson.Lookup" sfwMethodName="LoadPersons" />
  </initialload>
  <sfwTable ID="Main">
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlCLCriteria" sfwCaption="Criteria" sfwCollapsible="False">
          <sfwTable ID="tblCLCriteria">
            <sfwRow>
              <sfwColumn>
                <sfwTextBox ID="txtCL_person_id" sfwDataField="P.person_id" sfwDataType="Numeric" sfwQueryID="cdoPerson" sfwWatermark="Person ID" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwTextBox ID="txtCLFirstName" sfwDataField="first_name" sfwOperator="like" sfwQueryID="cdoPerson" sfwWatermark="First Name" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwTextBox ID="txtCLLastName" sfwDataField="last_name" sfwOperator="like" sfwQueryID="cdoPerson" sfwWatermark="Last Name" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn ColumnSpan="2">
                <sfwButton ID="btnCLSearch" sfwMethodName="btnSearch_Click" Text="Search" />
                <sfwButton ID="btnCLReset" sfwMethodName="btnReset_Click" Text="Reset" />
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlCLResult" sfwCaption="Search Results" sfwCollapsible="False">
          <sfwTable CssClass="Table" ID="tblCLResult">
            <sfwRow>
              <sfwColumn>
                <sfwButton ID="btnCLOpen" sfwActiveForm="wfmPersonMaintenance" sfwMethodName="btnOpen_Click" sfwNavigationParameter="Aintpersonid=PersonId" sfwRefreshUpdatePanels="uppCenterMiddle" sfwRelatedControl="dgrCLResult" Text="Open" Visible="False" CssClass="hideControl" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwGridView AllowPaging="True" AllowSorting="True" ID="dgrCLResult">
                  <Columns>
                    <TemplateField HeaderText="ID">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="PersonId" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Name" SortExpression="FullName" SortExpressionUpdated="true">
                      <ItemTemplate>
                        <sfwLabel sfwLinkable="True" sfwRelatedControl="btnCLOpen" sfwEntityField="PersonName" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Birth Date">
                      <ItemTemplate>
                        <sfwLabel sfwDataFormat="{0:d}" sfwEntityField="DateOfBirth" />
                      </ItemTemplate>
                    </TemplateField>
                  </Columns>
                </sfwGridView>
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
  </sfwTable>
  <loaddetails />
</form>