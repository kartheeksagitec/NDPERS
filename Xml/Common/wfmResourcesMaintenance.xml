<form ID="wfmResourcesMaintenance" sfwActive="True" sfwStatus="Valid" sfwRemoteObject="srvAdmin" sfwResource="502" sfwType="Maintenance" sfwTitle="Resources Maintenance" sfwHelpFile="Assign Roles=Assign Roles.htm;Create New Roles=Create New Roles.htm;Delete Role=Delete Role.htm;Modify Roles=Modify Roles.htm;Create New User=Create New User.htm;Modify User=Modify User.htm;Delete User=Delete User.htm;Security Overview=Security Overview.htm" version="3.5" sfwEntity="entResources">
  <initialload>
    <callmethods sfwMethodName="FindResource" />
  </initialload>
  <sfwTable ID="Main">
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnltoolbar">
          <sfwTable CellPadding="3" ID="toolbar">
            <sfwRow>
              <sfwColumn>
                <sfwButton ID="btnSave" sfwMethodName="btnSave_Click" sfwNavigationParameter="aintResourceId=ResourceId" Text="Save" />
                <sfwButton ID="btnSaveNew" sfwMethodName="btnSaveNew_Click" Text="SaveNew" />
                <sfwButton ID="btnCancel" sfwMethodName="btnCancel_Click" Text="Refresh" />
                <sfwButton ID="btnPrev" sfwMethodName="btnPrev_Click" Text="Prev" />
                <sfwButton ID="btnNext" sfwMethodName="btnNext_Click" Text="Next" />
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlMain" sfwCaption="Other Details">
          <sfwTable CssClass="Table" ID="tblMain">
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="cap34" SkinID="ReqInformation" Text="*" sfwIsCaption="True" />
                <sfwLabel ID="capResourceID" Text="Resource ID :" sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwTextBox ID="txtrole_id" sfwMode="New" sfwEntityField="ResourceId" />
                <sfwLabel ID="lblResourceId" sfwMode="Update" sfwEntityField="ResourceId" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="cap" SkinID="ReqInformation" Text="*" sfwIsCaption="True" />
                <sfwLabel ID="capResourceDescription" Text="Resource Description :" sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwTextBox ID="txtrole_description" Width="500px" sfwEntityField="ResourceDescription" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="cap1" SkinID="ReqInformation" Text="*" sfwIsCaption="True" />
                <sfwLabel ID="capType" Text="Type : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwDropDownList ID="ddlResourceTypeValue" sfwLoadType="CodeGroup" sfwLoadSource="12" sfwEntityField="ResourceTypeValue" />
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlResult" sfwCaption="Security details for this resource">
          <sfwTable CssClass="Table" ID="tblResult">
            <sfwRow>
              <sfwColumn>
                <sfwGridView AllowPaging="True" AllowSorting="True" ID="dgrResult" sfwTwoWayBinding="True" sfwEntityField="lstSecurity" sfwGridEntity="entSecurity">
                  <Columns>
                    <TemplateField HeaderText="Role">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="objRoles.RoleDescription" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Security Level" SortExpression="SecurityDescription" SortExpressionUpdated="true">
                      <ItemTemplate>
                        <sfwDropDownList sfwLoadType="CodeGroup" sfwLoadSource="11" sfwEntityField="SecurityValue" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Resource Id" Visible="False">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="ResourceId" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Role Id" Visible="False">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="RoleId" />
                      </ItemTemplate>
                    </TemplateField>
                  </Columns>
                </sfwGridView>
              </sfwColumn>
              <sfwColumn VerticalAlign="Top">
                <sfwGridView ID="dgrResourcesScreen" sfwEntityField="lstResourcesScreen" sfwGridEntity="entResourcesScreen" sfwTwoWayBinding="True">
                  <Columns>
                    <TemplateField HeaderText="File Name">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="IstrResourceFileName" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Resource Type">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="IstrResourceElement" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="ID">
                      <ItemTemplate>
                        <sfwLabel sfwEntityField="IstrResourceID" />
                      </ItemTemplate>
                    </TemplateField>
                  </Columns>
                </sfwGridView>
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlAuditInfo" sfwCaption="Audit Information">
          <sfwTable CssClass="Table" ID="tblAuditInfo">
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capCreate" Text="Create :" sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblCreatedBy" sfwEntityField="CreatedBy" />
                <sfwLabel ID="lblUpdateSeq" sfwTwoWayBinding="True" Visible="False" sfwEntityField="UpdateSeq" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblCreatedDate" sfwEntityField="CreatedDate" sfwDataFormat="{0:G}" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="capModify" Text="Modify :" sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblModifiedBy" sfwEntityField="ModifiedBy" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblModifiedDate" sfwEntityField="ModifiedDate" sfwDataFormat="{0:G}" />
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
  </sfwTable>
  <loaddetails>
    <entityfield ID="lstSecurity" sfwNewAutoLoad="False" sfwUpdateAutoLoad="False" />
    <entityfield ID="lstResourcesScreen" sfwNewAutoLoad="False" sfwUpdateAutoLoad="False" />
  </loaddetails>
</form>