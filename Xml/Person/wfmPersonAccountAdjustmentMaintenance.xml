                    <TemplateField HeaderText="Retirement Adjustment Contribution ID">
                      <ItemTemplate>
                        <sfwLabel sfwLinkable="True" sfwRelatedControl="btnOpenAdjustment" sfwEntityField="RetirementAdjustmentContributionId" />
                      </ItemTemplate>
                    </TemplateField>
                    <TemplateField HeaderText="Transaction Date">
                      <ItemTemplate>
                        <sfwLabel sfwDataFormat="{0:d}" sfwEntityField="TransactionDate" />
                      </ItemTemplate>
                    </TemplateField>
                  </Columns>
                </sfwGridView>
              </sfwColumn>
            </sfwRow>
