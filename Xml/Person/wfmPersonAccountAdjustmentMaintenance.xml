            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capPlanName" Text="Plan : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblPlanName" sfwEntityField="objPersonAccount.objPlan.PlanName" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="capPlanParticipationStatusDescription" Text="Plan Participation Status : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblPlanParticipationStatusDescription" sfwEntityField="objPersonAccount.PlanParticipationStatusDescription" />
              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlMain" sfwCaption="Person Account Adjustment Details">
          <sfwTable CssClass="Table" ID="tblMain">
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capPersonAccountAdjustmentId" Text="Person Account Adjustment ID : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblPersonAccountAdjustmentId" sfwEntityField="PersonAccountAdjustmentId" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="capStatusDescription" Text="Status : " sfwIsCaption="True" />
