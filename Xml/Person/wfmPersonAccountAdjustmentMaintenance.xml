            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capCapitalGain" Text="Capital Gain Amount : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwTextBox ID="txtCapitalGain" sfwDataFormat="{0:C}" sfwEntityField="CapitalGain" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="capRhicBenfitAmount" Text="RHIC Benefit Amount : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwTextBox ID="lblRhicBenfitAmount" sfwDataFormat="{0:C}" sfwEntityField="RhicBenfitAmount" />
              </sfwColumn>
            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capIstrSuppressWarning" Text="Suppress Warning : " sfwIsCaption="True" />
