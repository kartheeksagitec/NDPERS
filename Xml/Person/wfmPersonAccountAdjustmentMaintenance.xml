              <sfwColumn>
                <sfwCheckBox ID="chkIstrSuppressWarning" sfwEntityField="IstrSuppressWarning" />
              </sfwColumn>
              <sfwColumn />
              <sfwColumn />
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlAdjustmentContribution" sfwCaption="Retirement Adjustment Contribution Details">
          <sfwTable CssClass="Table" ID="tblAdjustmentContribution">
            <sfwRow>
              <sfwColumn>
