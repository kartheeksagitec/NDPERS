              </sfwColumn>
            </sfwRow>
          </sfwTable>
        </sfwPanel>
      </sfwColumn>
    </sfwRow>
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnlPersonInfo" sfwCaption="Person Information">
          <sfwTable CssClass="Table" ID="tblPersonInfo">
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capPersonId" Text="PERSLink ID : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLinkButton ID="lblPersonId" sfwActiveForm="wfmPersonMaintenance" sfwMethodName="btnOpen_Click" sfwNavigationParameter="Aintpersonid=objPersonAccount.objPerson.PersonId" sfwEntityField="objPersonAccount.objPerson.PersonId" />
