            </sfwRow>
            <sfwRow>
              <sfwColumn>
                <sfwLabel ID="capDateOfBirth" Text="Date of Birth : " sfwIsCaption="True" />
              </sfwColumn>
              <sfwColumn>
                <sfwLabel ID="lblDateOfBirth" sfwDataFormat="{0:d}" sfwEntityField="objPersonAccount.objPerson.DateOfBirth" />
