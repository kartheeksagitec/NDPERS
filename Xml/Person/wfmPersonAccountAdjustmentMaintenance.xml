<form ID="wfmPersonAccountAdjustmentMaintenance" sfwActive="True" sfwStatus="Review" sfwRemoteObject="srvPerson" sfwResource="230" sfwType="Maintenance" sfwTitle="Person Account Adjustment Maintenance" version="3.5" sfwEntity="entPersonAccountAdjustment">
  <initialload>
    <session>
      <field ID="person_account_adjustment_id" sfwEntityField="PersonAccountAdjustmentId" />
    </session>
    <callmethods sfwMode="New" sfwMethodName="NewPersonAccountAdjustment" />
    <callmethods sfwMode="Update" sfwMethodName="FindPersonAccountAdjustment" />
  </initialload>
  <sfwTable ID="Main">
    <sfwRow>
      <sfwColumn>
        <sfwPanel ID="pnltoolbar">
          <sfwTable ID="toolbar">
            <sfwRow>
              <sfwColumn>
                <sfwButton ID="btnSave" sfwMethodName="btnSave_Click" sfwNavigationParameter="aintAdjustmentID=PersonAccountAdjustmentId" Text="Save" />
                <sfwButton ID="btnCancel" sfwMethodName="btnCancel_Click" Text="Refresh" />
                <sfwButton ID="btnPrev" sfwMethodName="btnPrev_Click" Text="Prev" />
                <sfwButton ID="btnNext" sfwMethodName="btnNext_Click" Text="Next" />
                <sfwButton ID="btnCorrespondence" sfwMethodName="btnCorrespondence_Click" Visible="False" Text="Correspondence" />
